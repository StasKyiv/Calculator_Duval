		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="135"></RowDefinition>
		</Grid.RowDefinitions>


		<TextBox Grid.Column="0" 
                Name="TextBox1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" Width="76"
